isEmpty(QMAKECOMMAND): QMAKECOMMAND = qmake
isEmpty(LRELEASECOMMAND): LRELEASECOMMAND = lrelease
greaterThan(QT_MAJOR_VERSION, 5) {
    isEmpty(QCOLLECTIONGENERATORCOMMAND): QCOLLECTIONGENERATORCOMMAND = qhelpgenerator
} else {
    isEmpty(QCOLLECTIONGENERATORCOMMAND): QCOLLECTIONGENERATORCOMMAND = qcollectiongenerator
}

unix:!macx {
	isEmpty(PREFIX): PREFIX = /usr
	isEmpty(BIN_INSTALL_DIR): BIN_INSTALL_DIR = $${PREFIX}/bin
	isEmpty(DESKTOP_INSTALL_DIR): DESKTOP_INSTALL_DIR = /usr/share/applications
	isEmpty(MIME_INSTALL_DIR): MIME_INSTALL_DIR = /usr/share/mime/packages
	isEmpty(MAN_INSTALL_DIR): MAN_INSTALL_DIR = $${PREFIX}/share/man
	isEmpty(RESOURCES_INSTALL_DIR): RESOURCES_INSTALL_DIR = $${PREFIX}/share/qtikz
	isEmpty(TEMPLATE_EDITOR): TEMPLATE_EDITOR_DEFAULT = kwrite
}
